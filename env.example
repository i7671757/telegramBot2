# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================

# Bot Configuration (REQUIRED)
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username

# Webhook Configuration (REQUIRED for production)
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# ===========================================
# DATABASE & STORAGE
# ===========================================

# Session Configuration
SESSION_PATH=./sessions.json
SESSION_SECRET=your_session_secret_key_here

# Database Configuration
DATABASE_PATH=./orders.db
DATABASE_BACKUP_PATH=./backups/

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# API Configuration
API_URL=https://api.lesailes.uz/
API_KEY=your_api_key_here
API_TIMEOUT=10000

# Geocoding Service
GEOCODING_API_KEY=your_geocoding_api_key_here

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_SKIP_SUCCESSFUL=true

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Admin Configuration
ADMIN_CHAT_ID=your_admin_chat_id_here
ADMIN_USERNAME=your_admin_username

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here
ERROR_WEBHOOK_URL=your_error_webhook_url_here

# ===========================================
# FEATURE FLAGS
# ===========================================

# Features
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_WEBHOOK_VALIDATION=true

# Development Features
ENABLE_DEBUG_LOGGING=false
ENABLE_MOCK_PAYMENTS=false
ENABLE_TEST_MODE=false

# ===========================================
# CACHE CONFIGURATION
# ===========================================

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Memory Cache
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# SMS Configuration (optional)
SMS_API_KEY=your_sms_api_key
SMS_SENDER=YourBotName

# ===========================================
# BACKUP & MAINTENANCE
# ===========================================

# Backup Configuration
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
AUTO_CLEANUP_ENABLED=true

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Bot is under maintenance. Please try again later. 